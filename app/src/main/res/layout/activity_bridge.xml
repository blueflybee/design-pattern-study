<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_small_original_coffee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="small_original_coffee"/>

        <Button
            android:id="@+id/btn_small_sugar_coffee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="small_sugar_coffee"/>

        <Button
            android:id="@+id/btn_big_original_coffee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="big_original_coffee"/>


        <Button
            android:id="@+id/btn_big_sugar_coffee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="big_sugar_coffee"/>

    </LinearLayout>
</layout>